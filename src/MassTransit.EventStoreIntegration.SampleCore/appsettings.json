{
  "ConnectionStrings": {
    "EvtStoreConnection": "ConnectTo=tcp://admin:admin@localhost:1113; HeartBeatTimeout=20000; HeartbeatInterval=40000;"
  },
  "DeleteCompleted": false,
  "AuditStore": {
    "StreamName": "AuditTest",
    "MaxAgeSec": 604800
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\sample.txt",
          "fileSizeLimitBytes": 2000000,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 5,
          "outputTemplate": "{Timestamp:o} [{Level:u3}] [{SourceContext:l}{CallerInfo:l}] [ThreadId: {ThreadId}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ]
  }
}
